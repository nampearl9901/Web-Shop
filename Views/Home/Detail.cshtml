@model ShopCarrs.Models.Product

<section class="about section" id="about">
    <h2 class="section__title">
        Product Information
    </h2>
    <div class="about__container container grid">
        <div class="about__group">

            <img src="~/assets/img/Products/@Model.Image" alt="" class="about__img">

                <div class="about__card">
                <h3 class="about__card-title">@Model.Price</h3>
                <p class="about__card-description">@Model.Category</p>
                </div>
                            
                
           
        </div>

        <div class="about__data">
            <h2 class="section__title about__title">@Model.ProductName</h2>
            <br>
            <p class="about__card-description"> Description: @Model.Description</p>

            <br>
           
         
            
                   <a href=" @Url.Action("AddToCart","Cart",new {id=Model.ProductId})" class="button">Add</a>                
            
         
        

        </div>


    </div>


</section>

