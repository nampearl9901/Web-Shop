 @model CartModel
<html>
<head>

    <style>
        .button {
            display: inline - block;
            padding: 10px 15px;
            font - size: 24px;
            cursor: pointer;
            text - align: center;
            text - decoration: none;
            outline: none;
            color: #fff;
            background-color: purple;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
        }

            .button:hover {
                background-color: #58257b
            }

            .button:active {
                background-color: #58257b;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }




        tfoot td {
            text-align: right;
            font-weight: bold;
        }

        .actions {
            margin-top: 20px;
            text-align: right;
        }



        .img__cart {
            width: 100px;
            border-radius: .5rem;
        }

        .order-form {
            margin: 0 auto;
            max-width: 800px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .order-form h1 {
                font-size: 24px;
                margin-top: 0;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
            }

            .form-group select {
                background-color: #fff;
            }
    </style>
</head>
<body>
    <section class="featured section order-form" id="featured">
        <h2 class="section__title"> Shopping Cart</h2>
        <div class="featured__container container">




         
            <div class="checkout-form">
                <h2>Checkout</h2>
                <form method="post" asp-action="success" asp-controller="cart">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                             
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.getAllItems())
                            {

                                <tr>
                                    <td>@item.Name</td>
                                    <td> <img src="~/assets/img/Products/@item.ImagePath" alt="" class="img__cart"></td>
                                    <td>@item.Price</td>

                                    <td class="product-quantity">
                                        @using (Html.BeginForm("UpdateQuantity", "cart", FormMethod.Post))
                                        {
                                            <div class="quantity buttons_added">
                                                @Html.HiddenFor(m => @item.Id)
                                                <input type="submit" class="minus" value="-" name="btnUpdateQuantity">

                                                @Html.TextBoxFor(m => item.Quantity, "", new {@class = "input-text qty tex", @type="number"})
                                                <input type="submit" class="plus" value="+" name="btnUpdateQuantity">

                                            </div>
                                        }

                                    </td>

                                    <td>@item.lineTotal</td>
                                   
                                </tr>

                            }

                        </tbody>
                        @if (ViewBag.Message != null)
                        {
                            <p>@ViewBag.Message</p>
                        }
                        <tfoot>
                            <tr>
                                <td colspan="3">Total</td>
                                <td>@Model.getTotal()</td>
                                <td></td>
                            </tr>
                        </tfoot>

                    </table>
 

                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input type="text" id="address" name="Address" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input type="text" id="phone" name="Phone" required>
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender:</label>
                        <select id="gender" name="Gender" required>
                            <option value="">Select your gender</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                    </div>
                    <div class="actions">
                        <a href="@Url.Action("Shop","home")">
                            <button class="button">Continue Shopping</button>
                        </a>
                        <a href="@Url.Action("Success","cart")">
                            <button class="button">Pay</button>
                        </a>
                    </div>

                </form>
             
                
            </div>
         


        </div>



    </section>

</body>
</html>
